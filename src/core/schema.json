{
    "$schema": "http://json-schema.org/draft-07/schema",
    "id": "CoreModuleSchematics",
    "title": "Core Module Schema",
    "type": "object",
    "description": "Generating a core and shared module",
    "properties": {
        "coreModule": {
            "type": "string",
            "description": "The name of the core module",
            "default": "core",
            "x-prompt": "Provide your core module name:",
            "alias": "core"
        },
        "sharedModule": {
            "type": "string",
            "description": "The name of the shared module",
            "default": "shared",
            "x-prompt": "Provide your shared module name:",
            "alias": "shared"
        }
    },
    "required": []
}